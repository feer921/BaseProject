<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!--样式：默认透明，点击、选中为灰色背景； 不适合:不建议使用 -->
    <item android:drawable="@color/grayslate" android:state_pressed="true"/>
