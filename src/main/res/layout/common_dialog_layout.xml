<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    android:orientation="vertical"
    android:background="@drawable/rounded_different_corner_white_bg"
    >

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:background="@drawable/top_rounded_corner_blue_bg"
        android:gravity="center"
        android:minHeight="42dp"
        android:text="@string/hint"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:padding="5dp" 
        >

        <EditText
            android:id="@+id/edt_as_dialog_msg_or_edit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_4_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:lineSpacingExtra="3dp"
            android:text="21223"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="invisible"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" 
        >

        <include layout="@layout/gray_divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_btn_dialog_commit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/confirm"
                android:textColor="@drawable/selector_for_text_colors_black_def"
                android:textSize="16sp" />
			<View 
			    android:layout_width="0.5dp"
			    android:layout_height="match_parent"
			    android:background="@color/grayslate"
			    />
            <TextView
                android:id="@id/tv_btn_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/cancel"
                android:textColor="@drawable/selector_for_text_colors_black_def"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>