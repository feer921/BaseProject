<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_white_shape"
    android:orientation="vertical"
    android:padding="@dimen/dp_25"
    android:minWidth="@dimen/dp_290"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:src="@drawable/hint_info_pink_icon"
        android:layout_gravity="end"
        android:visibility="invisible"
        android:id="@+id/ivbtn_dialog_close"
        />
    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/common_tv_style"
        android:text="我是标题"
        android:lineSpacingExtra="@dimen/dp_3"
        android:textColor="@color/txt_black"
        android:maxLines="10"
        android:layout_marginTop="@dimen/dp_m_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:textSize="@dimen/sp_18"
        />

    <TextView
        android:id="@+id/tv_dialog_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="我是提示消息"
        android:textColor="#333333"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_14"
        />

    <TextView
        android:id="@+id/tv_dialog_hint_with_scrollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_20"
        android:scrollbars="vertical"
        android:text="我是提示消息"
        android:textColor="#333333"
        android:textSize="@dimen/sp_14"
        android:visibility="gone"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:id="@+id/ll_bottom_btns"
        >

        <TextView
            style="@style/common_tv_style"
            android:layout_width="wrap_content"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:minHeight="@dimen/dp_40"
            android:text="@string/cancel_no_gap"
            android:id="@+id/tv_btn_dialog_cancel"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_999"
            android:background="@drawable/sel_4_rounded_stroke"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            android:minWidth="@dimen/dp_110"
            />

        <TextView
            style="@style/common_tv_style"
            android:layout_width="wrap_content"
            android:minHeight="@dimen/dp_40"
            android:minWidth="@dimen/dp_110"
            android:text="@string/confirm_no_gap"
            android:id="@+id/tv_btn_dialog_commit"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/sel_4_rounded_stroke"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>
</LinearLayout>