<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ProgressBar
            android:id="@+id/def_left_load_anim"
            style="@style/circle_pb_loading_style"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/iv_horizontal_load_anim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/circle_loading"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/ll_load_and_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginStart="3dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <ProgressBar
                android:id="@+id/def_up_load_anim"
                style="@style/circle_pb_loading_style"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/iv_load_or_hint_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_hint_msg"
                style="@style/common_tv_style"
                android:layout_marginTop="5dp"
                android:singleLine="false"
                android:text="@string/loading"
                />

            <TextView
                android:id="@+id/tv_extra_desc_or_click"
                style="@style/common_tv_style"
                android:layout_marginTop="8dp"
                android:singleLine="false"
                android:text="@string/click_retry"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
</merge>