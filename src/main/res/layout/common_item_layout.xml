<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    >
    <ImageView
        android:id="@+id/iv_itme_type_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_itme_type_icon"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:id="@+id/tv_item_name"
        android:singleLine="true"
        android:text="Item Name"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/common_right_arrow"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/iv_item_right_arrow"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_item_right_arrow"
        android:singleLine="true"
        android:text="@string/lib_name"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_8"
        android:gravity="center_vertical"
        android:id="@+id/tv_item_extra_desc"
        android:visibility="invisible"
        />

    <ImageView
        android:contentDescription="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/iv_item_right_arrow"
        android:layout_marginEnd="@dimen/dp_8"
        android:background="@drawable/indeterminate_progressbar_drawable"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:visibility="invisible"
        android:id="@+id/iv_item_loading"
        />
</RelativeLayout>