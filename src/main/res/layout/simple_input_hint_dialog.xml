<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_white_shape"
    android:minWidth="@dimen/dp_290"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_20"
    >
    <ImageView
        android:id="@+id/ivbtn_dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:contentDescription="@null"
        android:src="@drawable/hint_info_pink_icon"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/tv_dialog_title"
        style="@style/common_tv_style"
        android:layout_marginTop="@dimen/dp_m_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:lineSpacingExtra="@dimen/dp_3"
        android:maxLines="10"
        android:text="我是标题"
        android:textColor="@color/txt_black"
        android:textSize="@dimen/sp_18"
        />

